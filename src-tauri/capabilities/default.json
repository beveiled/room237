{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "dialog:default",
    "store:default",
    "fs:allow-app-write",
    "fs:allow-app-read",
    "core:window:allow-start-dragging",
    "core:window:allow-minimize",
    "core:window:allow-close",
    "core:window:allow-set-fullscreen",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "**/*" }]
    }
  ]
}
