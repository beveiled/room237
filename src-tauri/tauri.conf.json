{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "room237",
  "version": "0.6.5",
  "identifier": "dev.beveiled.room237",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bunx next dev",
    "beforeBuildCommand": "bunx next build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "",
        "width": 1280,
        "height": 720,
        "minWidth": 1200,
        "minHeight": 450,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "titleBarStyle": "Overlay",
        "dragDropEnabled": false,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost; style-src 'self' 'unsafe-inline'; media-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*", "**/.room237-thumb/**"]
      },
      "dangerousDisableAssetCspModification": ["style-src"]
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "dmg": {
        "background": "icons/banner.png"
      }
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "assetProtocol": {
      "requireLiteralLeadingDot": false,
      "requireLiteralSeparator": false
    },
    "asset": {
      "requireLiteralLeadingDot": false,
      "requireLiteralSeparator": false
    },
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "endpoints": [
        "https://github.com/beveiled/room237/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlCMjY5RTM4REIxNUI0QTkKUldTcHRCWGJPSjRtbTdJMzdkOE9FWjZRcytJL3ExUFpRUCtKNmQ3NVpVRW1hNktmbXI3MzJucFUK"
    }
  }
}
